#!/usr/bin/make -f

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

CONFIGURE_ARGS = CGIT_SCRIPT_NAME=cgit \
	CGIT_SCRIPT_PATH=/usr/bin \
	CGIT_DATA_PATH=/usr/share/cgit \
	NO_OPENSSL=1 \
	SHA1_HEADER=\"mozilla-sha1/sha1.h\"

build: build-stamp
build-stamp:
	dh_testdir

	$(MAKE) $(CONFIGURE_ARGS)

	touch $@

clean:
	dh_testdir
	dh_testroot

	$(MAKE) -C git clean
	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep

	$(MAKE) install $(CONFIGURE_ARGS) DESTDIR=$(CURDIR)/debian/cgit

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_installman
	dh_install
	dh_strip
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
